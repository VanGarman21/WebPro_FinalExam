@model IEnumerable<FinalExamWebPro.Data.Book>

@{
    ViewData["Title"] = "Index";
}

<h1 class="fw-bold mt-5">Book List</h1
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookTitle)
            </td>
            <td>
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.Id">Details</a>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
